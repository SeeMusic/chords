{
  "compilerOptions": {
    "disableSizeLimit": true,
    "composite": true,
    "baseUrl": ".",
    "outDir": "./lib",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "node",
      "vue-router"
    ],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    // "vite.*.config.ts"
  ],
  "references": [
    {
      "path": "../../tsconfig.json"
    }
  ]
}
