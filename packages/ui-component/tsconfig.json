{
  "compilerOptions": {
    "disableSizeLimit": true,
    "outDir": "./lib",
    "types": [
      "node",
      "vue-router"
    ],
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "./vite.*.config.ts"
  ],
  "references": [
    {
      "path": "../../tsconfig.json"
    }
  ]
}