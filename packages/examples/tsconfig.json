{
  "compilerOptions": {
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "disableSizeLimit": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      // "./node_modules/element-plus/global",
      // "./node_modules/@seemusic/ui-components/lib/volar",
      "element-plus/global",
      "@seemusic/ui-components/lib/volar",
      "node",
      "vue-router"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "../../tsconfig.json"
    }
  ]
}
